@model IEnumerable<Lab05.Models.Employee>

<h2>Employee List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FullName</td>
                <td>@emp.Gender</td>
                <td>@emp.Phone</td>
                <td>@emp.Email</td>
                <td>@emp.Salary</td>
                <td>@emp.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
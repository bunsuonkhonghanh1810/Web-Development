<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MyMvcApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-dark text-white p-3 mb-4">
        <div class="container">
            <h1 class="h3">MyMvcApp</h1>
            <nav class="nav">
                <a class="nav-link text-white" href="/Home/Index">Home</a>
                <a class="nav-link text-white" href="/Home/About">About</a>
                <a class="nav-link text-white" href="/Home/Contact">Contact</a>
                <a class="nav-link text-white" href="/Product/List">Products</a>
            </nav>
        </div>
    </header>

    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top">
        <p class="mb-0">&copy; 2025 - MyMvcApp</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
